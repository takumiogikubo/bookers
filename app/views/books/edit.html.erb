<div class=edit>

  <h3><strong>Editing Book</strong></h3>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <h6>Title</h6>
    <%= f.text_field :title %>
    <h6>Body</h6>
    <div class=submit_block>
      <div>
      <%= f.text_area :body %>
      </div>
      <div  class=submit>
      <%= f.submit 'Update Book' %>
      </div>
    </div>


  <% end %>

  <p><%= link_to "Show", book_path(@book.id)%> | <%= link_to "Back", books_path %></p>

</div>